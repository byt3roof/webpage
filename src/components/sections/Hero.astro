---
interface Props {
    data: {
        h1: string;
        p: string;
        CtaButton: string;
    };
}

const { data } = Astro.props;
---

<section class="hero section">
    <div class="container hero-container">
        <h1 class="hero-title">{data.h1}</h1>
        <p class="hero-text">{data.p}</p>
        <a href="#contact" class="btn hero-btn">{data.CtaButton}</a>
    </div>
    <div class="hero-bg"></div>
</section>

<style>
    .hero {
        position: relative;
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        overflow: hidden;
        padding-top: 80px; /* Header height offset */
    }

    .hero-container {
        position: relative;
        z-index: 2;
        max-width: 800px;
    }

    .hero-title {
        font-size: 4rem;
        background: linear-gradient(to right, #fff, var(--text-muted));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: var(--spacing-md);
        line-height: 1.1;
    }

    .hero-text {
        font-size: 1.25rem;
        margin-bottom: var(--spacing-lg);
        color: var(--text-muted);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .hero-btn {
        font-size: 1.1rem;
        padding: 1rem 2.5rem;
    }

    /* Background effects */
    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        background: radial-gradient(
            circle at 50% 50%,
            rgba(112, 0, 255, 0.15) 0%,
            rgba(10, 10, 10, 0) 70%
        );
    }

    .hero-bg::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: linear-gradient(
                rgba(255, 255, 255, 0.03) 1px,
                transparent 1px
            ),
            linear-gradient(
                90deg,
                rgba(255, 255, 255, 0.03) 1px,
                transparent 1px
            );
        background-size: 50px 50px;
        mask-image: radial-gradient(circle at 50% 50%, black, transparent 80%);
    }

    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-text {
            font-size: 1.1rem;
        }
    }
</style>
